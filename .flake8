[flake8]

# Maximum line length compatible with Black
max-line-length = 88

# Ignored errors compatible with Black
extend-ignore = E203, E266, W503, W293

# Exclude patterns
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .pytest_cache

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    */cli.py:C901

# Maximum cyclomatic complexity
max-complexity = 10

